# Flask应用环境变量配置
# 此文件已提交到仓库，默认为生产环境配置

# Flask配置
FLASK_APP=app.py
FLASK_ENV=production  # 本地调试请设置为development
DEBUG=False  # 本地调试请设置为True

# 服务器配置
HOST=0.0.0.0
PORT=8000  # 本地调试和生产环境统一使用8000端口

# 日志配置
LOG_LEVEL=INFO  # 本地调试可设置为DEBUG

# Gunicorn配置
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_WORKER_CLASS=gevent
GUNICORN_TIMEOUT=30
GUNICORN_DAEMON=False
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# 跨域配置
CORS_ORIGINS=*  # 个人小组开发，暂不做域名限制

