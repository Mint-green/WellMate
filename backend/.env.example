# Flask应用环境变量配置
# 此文件已提交到仓库，默认为生产环境配置示例

# Flask配置
FLASK_APP=app.py
FLASK_ENV=production  # 本地调试请设置为development
DEBUG=False  # 本地调试请设置为True

# 服务器配置
HOST=0.0.0.0
PORT=5000  # 本地调试和生产环境统一使用5000端口

# 日志配置
LOG_LEVEL=INFO  # 本地调试可设置为DEBUG

# Gunicorn配置
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_WORKER_CLASS=gevent
GUNICORN_TIMEOUT=30
GUNICORN_DAEMON=False
GUNICORN_MAX_REQUESTS=1000
GUNICORN_MAX_REQUESTS_JITTER=50

# 跨域配置
CORS_ORIGINS=*  # 个人小组开发，暂不做域名限制

# 数据库配置
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=wellmate
DB_POOL_NAME=wellmate_pool
DB_POOL_SIZE=5

# Coze API配置
COZE_API_BASE_URL=https://api.coze.cn/v1
COZE_API_KEY=your_coze_api_key_here